<?xml version="1.0" encoding="utf-8"?>
<collapsible-dialog title="Song Data" width="325" height="465">
	<vbox width="100%" height="100%">
		<label text="Song" verticalAlign="center" />
		<textfield id="songNameField" verticalAlign="center" />
		<label text="BPM" verticalAlign="center" />
		<number-stepper id="bpmStepper" pos="100" step="0.1" verticalAlign="center" />
		<label text="Scroll Speed" verticalAlign="center" />
		<number-stepper id="scrollStepper" pos="1" step="0.1" verticalAlign="center" />
		<menu-separator />
		<label text="Player" verticalAlign="center" />
		<dropdown id="bfDrop" width="200" verticalAlign="center" dropdownSize="8"/>
		<label text="Girlfriend" verticalAlign="center" />
		<dropdown id="gfDrop" width="200" verticalAlign="center" />
		<label text="Opponent" verticalAlign="center" />
		<dropdown id="oppDrop" width="200" verticalAlign="center" />
		<menu-separator />
		<label text="Stage" verticalAlign="center" />
		<dropdown id="stageDrop" width="190" verticalAlign="center" />
		<label text="Difficulty" verticalAlign="center" />
		<dropdown id="diffDrop" width="110" verticalAlign="center" />
	</vbox>
</collapsible-dialog>